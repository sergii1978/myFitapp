source 'https://rubygems.org'

gem 'sinatra'
gem 'sinatra-reloader', :require => 'sinatra/reloader', :group => :development
gem 'sinatra-i18n'
gem 'font-awesome-sass'
gem 'rack'
gem 'erb'
gem 'webrick' # потрібен для запуску на Ruby >= 3.0 локально

group :development do
  gem 'sinatra-contrib' # додає sinatra/reloader, інтернаціоналізацію, логування тощо
end
