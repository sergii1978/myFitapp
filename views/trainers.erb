<!-- views/trainers.erb -->
<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= t(:trainers_page_description) %>">
  <title><%= t(:trainers_page_title) %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>
  <%= erb :layout %>
  <div class="container mt-5">
    <h1 class="text-center"><%= t(:trainers_page_title) %></h1>
    <div class="row">
      <% @trainers.each do |trainer| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="<%= trainer[:image_url] %>" class="card-img-top" alt="<%= trainer[:name] %>">
            <div class="card-body">
              <h5 class="card-title"><%= trainer[:name] %></h5>
              <p class="card-text"><%= trainer[:bio] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= erb :footer %>
</body>
</html>

